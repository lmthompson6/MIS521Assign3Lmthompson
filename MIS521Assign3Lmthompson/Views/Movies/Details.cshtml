@model MIS521Assign3Lmthompson.Models.MovieTweetsVM

@{
    ViewData["Title"] = "Details";
}

<h1>Details</h1>

<div>
    <h4>@Html.DisplayFor(model => model.Movie.Title)</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Movie.Title)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Movie.Title)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Movie.IMDB)
        </dt>
        <dd class = "col-sm-10">
            <a href="@Model.Movie.IMDB">IMDB</a>
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Movie.Genre)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Movie.Genre)
        </dd>
        <dt class = "col-sm-2">
            Year of Release
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Movie.YearOfRelease)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Movie.Poster)
        </dt>
        <dd class="col-sm-10">
            @if (Model.Movie.Poster != null)
            {
                <img width="100" height="100" src="@Url.Action("GetMoviePoster", "Movies", new {Model.Movie.Id})">
            }
        </dd>
    </dl>
</div>
<div>
    <a asp-action="Edit" asp-route-id="@Model?.Movie.Id">Edit</a> |
    <a asp-action="Index">Back to List</a>
</div>
<hr />
<h1>Twitter Analysis</h1>
<h2>Average Sentiment Score: @Model.ScoreAvg</h2>
<table class="table">
    <thead>
        <tr>
            <th>
                Tweet Text
            </th>
            <th>
                Sentiment Score
            </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.Tweets)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.TweetText)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.SentScore)
                </td>
            </tr>
        }
    </tbody>
</table>